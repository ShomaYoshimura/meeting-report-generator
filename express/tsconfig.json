{
    "compilerOptions": {
      "moduleResolution": "node",
      "module": "commonjs",
      "target": "es6",
      "lib": ["es6", "dom"],
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "strictPropertyInitialization": true,
      "noImplicitThis": true,
      "noImplicitReturns": true,
      "alwaysStrict": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }